#!/usr/bin/env zsh

set -e

DIR="$(cd "$(dirname "$0")" && pwd)"
command="${1}"
package="${2}"

if [ -z "${command}" ]; then
  echo "Command is required"
  exit 1
fi

if [ -z "${package}" ]; then
  echo "Package is required"
  exit 2
fi

case "${command}" in
  "install")
    echo "ðŸš€ Installing package: ${package}"
    $DIR/${package}/install.sh
    echo "\n"
    ;;
  "uninstall")
    echo "ðŸ—‘  Uninstalling package: ${package}"
    $DIR/${package}/uninstall.sh
    echo "\n"
    ;;
  *)
    echo "${command} is not a valid command"
    exit 3
    ;;
esac
